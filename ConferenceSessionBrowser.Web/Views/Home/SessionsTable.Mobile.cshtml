@model IEnumerable<Session>

<h2>@ViewBag.Title</h2>

<ul data-role="listview">
        @foreach(var session in Model) {
            <li>
                <a href="@Url.Action("Session", new { session.Code })">
                <h3>@session.Title</h3>
                <p><strong>@string.Join(", ", session.Speakers)</strong></p>
                <p>@session.DateText</p>
                </a>
            </li>                                           
        }
</ul>